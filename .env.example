# Notification Settings
# Configure these in the GUI via Settings button
# By default, notifications are DISABLED

# Email Notifications (Disabled by default)
EMAIL_ENABLED=false
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here
FROM_EMAIL=your-email@gmail.com
TO_EMAIL=recipient@example.com

# MS Teams Notifications (Disabled by default)
TEAMS_ENABLED=false
TEAMS_WEBHOOK_URL=https://your-org.webhook.office.com/webhookb2/your-webhook-url-here

# Common SMTP Servers:
# Gmail: smtp.gmail.com (port 587) - Use App Password, not regular password
# Outlook/Office365: smtp.office365.com (port 587)
# Yahoo: smtp.mail.yahoo.com (port 587)
# iCloud: smtp.mail.me.com (port 587)
